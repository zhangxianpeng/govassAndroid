<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/iv_title_bar_back"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/nav_ic_back" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/promotion_download"
                android:textColor="#222222"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_title_bar"
            android:background="@mipmap/me_tuiguang_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="分享政企通给好友"
                android:textColor="#ffffffff"
                android:textSize="45sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_350"
                android:layout_height="@dimen/dp_400"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_221"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/dp_25">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center"
                        android:text="扫一扫立即下载"
                        android:textColor="#ff343434"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_share_code"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_200"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/default_tx_img" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:src="@mipmap/me_line" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复制下载地址发送给好友即可"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#ff9a9a9a"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn_copy"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/reg_btn_shape"
                        android:text="复制"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</layout>