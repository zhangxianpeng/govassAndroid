<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.login.GovassLoginctivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:src="@mipmap/tabar_default_user" />
    </RelativeLayout>

    <TextView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_41"
        android:text="注册"
        android:textColor="#ff303030"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_22"
            android:text="已经有账号？立即"
            android:textColor="#ff999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_22"
            android:text="登录"
            android:textColor="#ff3c66e4"
            android:textSize="16sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:hint="用户名*"
        android:textColorHint="#D0D0D0"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#F3F3F3"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@null"
        android:hint="手机号码*"
        android:textColorHint="#D0D0D0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#F3F3F3"/>

    <EditText
        android:id="@+id/et_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:hint="公司名称*"
        android:textColorHint="#D0D0D0"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#F3F3F3"/>

    <EditText
        android:id="@+id/et_id_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:hint="身份证号*"
        android:textColorHint="#D0D0D0"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#F3F3F3"/>

    <EditText
        android:id="@+id/et_set_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:hint="设置密码*"
        android:textColorHint="#D0D0D0"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#F3F3F3"/>

    <EditText
        android:id="@+id/et_verify_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:hint="确认密码*"
        android:textColorHint="#D0D0D0"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#F3F3F3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35">

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="验证码*"
                android:textColorHint="#D0D0D0"
                android:background="@null"/>

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:text="发送验证码"
                android:textColor="#ff2296ff"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <!--需要自定义 background 实现默认和点击的效果切换-->
    <Button
        android:id="@+id/btn_login"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="注册"
        android:background="@drawable/reg_btn_shape"
        android:textColor="#FFFFFF" />
</RelativeLayout>