<?xml version="1.0" encoding="utf-8"?>
<com.lihang.selfmvvm.customview.swipeview.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/address_ic_grouping" />

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/btn_gray_right" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_toRightOf="@+id/iv_head"
        android:text="计总强"
        android:textColor="#ff303030"
        android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_delete"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@color/red"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"/>

        <TextView
            android:id="@+id/tv_move"
            android:text="移动"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@color/gray_white"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"/>
    </LinearLayout>
</com.lihang.selfmvvm.customview.swipeview.SwipeItemLayout>