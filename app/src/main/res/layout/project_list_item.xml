<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_70"
            android:layout_centerVertical="true"
            android:src="@mipmap/home_default_img" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_gray_right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_toRightOf="@+id/iv_preview"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_project_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020年南宁服务机构能力提升研修班项目（第八期）"
                android:textColor="#ff303030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_project_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="2020年6月17日"
                android:textColor="#ff999999"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>